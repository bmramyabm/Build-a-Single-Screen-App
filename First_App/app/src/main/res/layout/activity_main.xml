<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/mainimage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mainpic" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:text="@string/description"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/description"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:background="#F4F1F1"
        app:srcCompat="@drawable/phone1" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/phone_icon"
        android:paddingTop="8dp"
        android:autoLink="phone"
        android:text="404-334-9558"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/phone_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/location"
        android:layout_width="248dp"
        android:layout_height="53dp"
        android:layout_below="@id/phone"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/location_icon"
        android:paddingTop="8dp"
        android:text="@string/address"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/website_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/location_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/web1" />

    <TextView
        android:id="@+id/website"
        android:layout_width="248dp"
        android:layout_height="53dp"
        android:layout_below="@id/location"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/website_icon"
        android:paddingTop="8dp"
        android:autoLink="web"
        android:text="www.karateandtaichi.com/"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>
